{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "workflows_queue_sender_name": {
            "type": "String"
        },
        "workflows_queue_receiver_externalid": {
            "type": "String"
        },
        "connections_azurequeues_externalid": {
            "type": "String"
        },
        "source_queue_name": {
            "type": "String"
        },
        "connections_azurequeues_id": {
            "type": "String"
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.Logic/workflows",
            "apiVersion": "2017-07-01",
            "name": "[parameters('workflows_queue_sender_name')]",
            "location": "eastus",
            "properties": {
                "state": "Enabled",
                "definition": {
                    "$schema": "https://schema.management.azure.com/providers/Microsoft.Logic/schemas/2016-06-01/workflowdefinition.json#",
                    "contentVersion": "1.0.0.0",
                    "parameters": {
                        "$connections": {
                            "defaultValue": {},
                            "type": "Object"
                        }
                    },
                    "triggers": {
                        "When_there_are_messages_in_a_queue_(V2)": {
                            "recurrence": {
                                "frequency": "Minute",
                                "interval": 1
                            },
                            "evaluatedRecurrence": {
                                "frequency": "Minute",
                                "interval": 1
                            },
                            "splitOn": "@triggerBody()?['QueueMessagesList']?['QueueMessage']",
                            "type": "ApiConnection",
                            "inputs": {
                                "host": {
                                    "connection": {
                                        "name": "@parameters('$connections')['azurequeues']['connectionId']"
                                    }
                                },
                                "method": "get",
                                "path": "[concat('/v2/storageAccounts/@{encodeURIComponent(encodeURIComponent(''AccountNameFromSettings''))}/queues/@{encodeURIComponent(''', parameters('source_queue_name'), ''')}/message_trigger')]"
                            }
                        }
                    },
                    "actions": {
                        "Delete_message_(V2)": {
                            "runAfter": {
                                "queue-receiver": [
                                    "Succeeded"
                                ]
                            },
                            "type": "ApiConnection",
                            "inputs": {
                                "host": {
                                    "connection": {
                                        "name": "@parameters('$connections')['azurequeues']['connectionId']"
                                    }
                                },
                                "method": "delete",
                                "path": "[concat('/v2/storageAccounts/@{encodeURIComponent(encodeURIComponent(''AccountNameFromSettings''))}/queues/@{encodeURIComponent(''', parameters('source_queue_name'), ''')}/messages/@{encodeURIComponent(triggerBody()?[''MessageId''])}')]",
                                "queries": {
                                    "popreceipt": "@triggerBody()?['PopReceipt']"
                                }
                            }
                        },
                        "queue-receiver": {
                            "runAfter": {},
                            "type": "SendToBatch",
                            "inputs": {
                                "batchName": "input",
                                "content": "@triggerBody()?['MessageText']",
                                "host": {
                                    "triggerName": "Batch_messages",
                                    "workflow": {
                                        "id": "[parameters('workflows_queue_receiver_externalid')]"
                                    }
                                }
                            }
                        }
                    },
                    "outputs": {}
                },
                "parameters": {
                    "$connections": {
                        "value": {
                            "azurequeues": {
                                "connectionId": "[parameters('connections_azurequeues_externalid')]",
                                "connectionName": "azurequeues",
                                "id": "[parameters('connections_azurequeues_id')]"
                            }
                        }
                    }
                }
            }
        }
    ]
}