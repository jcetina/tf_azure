{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "workflows_queue_sender_name": {
            "type": "String"
        },
        "workflows_queue_receiver_externalid": {
            "type": "String"
        },
        "source_queue_name": {
            "type": "String"
        },
        "connections_queues_name": {
            "type": "String"
        }
    },
    "variables": {
        "connections_queues_connectionId": "[concat('/subscriptions/', subscription()['subscriptionId'], '/resourceGroups/', resourceGroup()['name'], '/providers/Microsoft.Web/connections/', parameters('connections_queues_name'))]",
        "connections_queues_id": "[concat('/subscriptions/', subscription()['subscriptionId'], '/providers/Microsoft.Web/locations/', resourceGroup()['location'], '/managedApis/', parameters('connections_queues_name'))]"
    },
    "resources": [
        {
            "type": "Microsoft.Logic/workflows",
            "apiVersion": "2017-07-01",
            "name": "[parameters('workflows_queue_sender_name')]",
            "location": "eastus",
            "dependsOn": [
                "[resourceId('Microsoft.Web/connections', parameters('connections_queues_name'))]"
            ],
            "properties": {
                "state": "Enabled",
                "definition": {
                    "$schema": "https://schema.management.azure.com/providers/Microsoft.Logic/schemas/2016-06-01/workflowdefinition.json#",
                    "contentVersion": "1.0.0.0",
                    "parameters": {
                        "$connections": {
                            "defaultValue": {},
                            "type": "Object"
                        }
                    },
                    "triggers": {
                        "When_there_are_messages_in_a_queue_(V2)": {
                            "recurrence": {
                                "frequency": "Minute",
                                "interval": 1
                            },
                            "evaluatedRecurrence": {
                                "frequency": "Minute",
                                "interval": 1
                            },
                            "splitOn": "@triggerBody()?['QueueMessagesList']?['QueueMessage']",
                            "type": "ApiConnection",
                            "inputs": {
                                "host": {
                                    "connection": {
                                        "name": "[variables('connections_queues_connectionId')]"
                                    }
                                },
                                "method": "get",
                                "path": "[concat('/v2/storageAccounts/@{encodeURIComponent(encodeURIComponent(''AccountNameFromSettings''))}/queues/@{encodeURIComponent(''', parameters('source_queue_name'), ''')}/message_trigger')]"
                            }
                        }
                    },
                    "actions": {
                        "Delete_message_(V2)": {
                            "runAfter": {
                                "queue-receiver": [
                                    "Succeeded"
                                ]
                            },
                            "type": "ApiConnection",
                            "inputs": {
                                "host": {
                                    "connection": {
                                        "name": "[variables('connections_queues_connectionId')]"
                                    }
                                },
                                "method": "delete",
                                "path": "[concat('/v2/storageAccounts/@{encodeURIComponent(encodeURIComponent(''AccountNameFromSettings''))}/queues/@{encodeURIComponent(''', parameters('source_queue_name'), ''')}/messages/@{encodeURIComponent(triggerBody()?[''MessageId''])}')]",
                                "queries": {
                                    "popreceipt": "@triggerBody()?['PopReceipt']"
                                }
                            }
                        },
                        "queue-receiver": {
                            "runAfter": {},
                            "type": "SendToBatch",
                            "inputs": {
                                "batchName": "input",
                                "content": "@triggerBody()?['MessageText']",
                                "host": {
                                    "triggerName": "Batch_messages",
                                    "workflow": {
                                        "id": "[parameters('workflows_queue_receiver_externalid')]"
                                    }
                                }
                            }
                        }
                    },
                    "outputs": {}
                },
                "parameters": {
                    "$connections": {
                        "value": {
                            "[parameters('connections_queues_name')]": {
                                "connectionId": "[concat('/subscriptions/', subscription()['subscriptionId'], '/resourceGroups/', resourceGroup()['name'], '/providers/Microsoft.Web/connections/', parameters('connections_queues_name'))]",
                                "connectionName": "[parameters('connections_queues_name')]",
                                "id": "[variables('connections_queues_id')]"
                            }
                        }
                    }
                }
            }
        },
        {
            "type": "Microsoft.Web/connections",
            "apiVersion": "2016-06-01",
            "name": "[parameters('connections_queues_name')]",
            "location": "resourceGroup()['location']",
            "kind": "V1",
            "properties": {
                "displayName": "[parameters('connections_queues_name')]",
                "statuses": [
                    {
                        "status": "Connected"
                    }
                ],
                "customParameterValues": {},
                "api": {
                    "name": "[parameters('connections_queues_name')]",
                    "displayName": "Azure Queues",
                    "description": "Azure Queue storage provides cloud messaging between application components. Queue storage also supports managing asynchronous tasks and building process work flows.",
                    "iconUri": "[concat('https://connectoricons-prod.azureedge.net/releases/v1.0.1538/1.0.1538.2619/', parameters('connections_queues_name'), '/icon.png')]",
                    "brandColor": "#0072C6",
                    "id": "[variables('connections_queues_id')]",
                    "type": "Microsoft.Web/locations/managedApis"
                },
                "testLinks": [
                    {
                        "requestUri": "[concat('https://management.azure.com:443/subscriptions/', subscription()['subscriptionId'], '/resourceGroups/', resourceGroup()['name'], '/providers/Microsoft.Web/connections/', parameters('connections_queues_name'), '/extensions/proxy/testConnection?api-version=2016-06-01')]",
                        "method": "get"
                    }
                ]
            }
        }
    ]
}